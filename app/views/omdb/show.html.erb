<% if @movie %>
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= @movie['Title'] %> (<%= @movie['Year'] %>)</h1>
      <p><strong>Genre:</strong> <%= @movie['Genre'] %></p>
      <p><strong>Director:</strong> <%= @movie['Director'] %></p>
      <p><strong>Actors:</strong> <%= @movie['Actors'] %></p>
      <p><strong>Plot:</strong> <%= @movie['Plot'] %></p>
      <img src="<%= @movie['Poster'] %>" alt="<%= @movie['Title'] %> Poster" class="img-fluid">
    </div>
  </div>

  <div class="mt-3">
    <%= button_to 'Favoritar', movies_path(movie: @movie), method: :post, class: 'btn btn-success' %>
  </div>

<% else %>
  <p>Movie not found.</p>
<% end %>
